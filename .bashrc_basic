# vim: ft=sh
# No brainer, default to Vim
export EDITOR="vim"
# Color LS output to differentiate between directories and files
export LS_OPTIONS="--color=auto"
export CLICOLOR="Yes"
export LSCOLOR=""
# Customize Path
export PATH=$HOME/bin:$PATH
export PS1="\[\e[36m\]\W\[\e[m\]\[\e[32m\]\[\e[m\] $ "
#Aliases
alias ll="ls -lrt"
alias la="ls -lrta"
